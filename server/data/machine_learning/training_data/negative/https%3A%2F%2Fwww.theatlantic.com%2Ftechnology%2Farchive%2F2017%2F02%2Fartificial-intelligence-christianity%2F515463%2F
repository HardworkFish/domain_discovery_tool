<li class="most-popular-article " itemscope="itemscope" itemtype="http://schema.org/NewsArticle">
    <a href="/entertainment/archive/2017/02/lady-gaga-halftime-show-review-gravity-trump/515739/" class="article-link" data-article-id="515739" data-omni-click="inherit" itemprop="mainEntityOfPage">
        
            <figure class="lead-img" itemprop="image" itemscope itemtype="https://schema.org/ImageObject">
                <img data-src="https://cdn.theatlantic.com/assets/media/img/mt/2017/02/RTX2ZR3K/hero_wide_640.jpg?1486353489" alt="" class="lazyload">
                <meta itemprop="url" content="https://cdn.theatlantic.com/assets/media/img/mt/2017/02/RTX2ZR3K/hero_wide_640.jpg?1486353489"></meta>
